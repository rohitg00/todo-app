{
  "compilerOptions": {
    "lib": [
      "esnext",
      "dom",
      "dom.Iterable"
    ],
    "target": "es2020",
    "module": "NodeNext",
    "jsx": "react-jsx",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./dist",
    "types": [
      "vitest/globals",
      "@testing-library/jest-dom"
    ],
    "allowSyntheticDefaultImports": true,
    "rootDir": "../.."
  },
  "exclude": [
    "../../todo-app/todo-item/artifacts",
    "../../todo-app/todo-item/public",
    "../../todo-app/todo-item/dist",
    "../../todo-app/todo-item/node_modules",
    "../../todo-app/todo-item/package.json",
    "../../todo-app/todo-item/**/*.cjs",
    "../../todo-app/todo-item/./dist"
  ],
  "include": [
    "../../todo-app/todo-item/**/*",
    "../../todo-app/todo-item/**/*.json",
    "./global-types/**/*"
  ]
}